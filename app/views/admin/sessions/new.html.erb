<%= form_for(:admin, url: admin_login_path, html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>

  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, class: "form-control", placeholder: "E-mail", required: true %>
  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>

  <div class="checkbox">
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>
  </div>

  <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
