<% columns = 5 %>

<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>三字熟語</th>
      <% (columns-1).times do %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @three_phrases.each_slice(columns) do |three_phrases| %>
      <tr>
        <% three_phrases.each do |three_phrase| %>
          <td><span><%= three_phrase.to_s %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<center>
<span><%= paginate @three_phrases %></span>
</center>
